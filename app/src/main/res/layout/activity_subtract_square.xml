<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00836f"
    tools:context=".SubtractSquareGame.SubtractSquareActivities.SubtractSquareActivity">

    <TextView
        android:id="@+id/gameNumber"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Current Total"
        android:text="Current Total"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress" />

    <TextView
        android:id="@+id/progress"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="50dp"
        android:text="progress"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronometer2" />

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="97dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Enter a perfect square"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/Enter"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="150dp"
        android:onClick="onclickEnter"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/goBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:onClick="onclickGoBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit_white" />

    <Button
        android:id="@+id/undo"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="172dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/undo"
        android:onClick="onclickUndo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/undoTimes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="undoTimes"
        android:textAlignment="center"
        android:textColor="#bfbfbf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>