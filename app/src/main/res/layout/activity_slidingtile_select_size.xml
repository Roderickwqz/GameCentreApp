<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".slidingtiles.SlidingtileSelectSizeActivity">

    <Button
        android:id="@+id/size3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="67dp"
        android:onClick="onclickSizeThree"
        android:text="Size 3"
        app:layout_constraintBottom_toTopOf="@+id/size4"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/size4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="67dp"
        android:onClick="onclickSizeFour"
        android:text="Size 4"
        app:layout_constraintBottom_toTopOf="@+id/size5"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/size5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="200dp"
        android:onClick="onclickSizeFive"
        android:text="Size 5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/goBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="175dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/exit_white"
        android:onClick="onclickGoBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"/>
</android.support.constraint.ConstraintLayout>